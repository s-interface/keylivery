<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import keylivery.qrcode.QRCanvas?>
<?import javafx.scene.canvas.Canvas?>
<GridPane fx:controller="keylivery.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>

    <Text text="Enter Text:"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />

    <TextField fx:id="inputTextField" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <Button text="Submit" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#handleSubmitButtonAction" />

    <QRCanvas fx:id="actionCanvas" height="250" width="250" GridPane.columnIndex="0" GridPane.rowIndex="3"/>


</GridPane>